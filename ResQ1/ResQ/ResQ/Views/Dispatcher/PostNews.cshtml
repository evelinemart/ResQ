@model ResQ.Models.AccountKeeper
@{
    ViewBag.Title = "PostNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-4">

        <div>
            <ul class="nav nav-pills nav-stacked">
                <li role="presentation">@Html.ActionLink("Входящие вызовы", "Index", "Dispatcher", new { @class = "backFont" })</li>
                <li role="presentation">@Html.ActionLink("История вызов", "CallHistory", "Dispatcher", new { @class = "backFont" })</li>
                <li role="presentation">@Html.ActionLink("Сформировать отчет", "PrintReport", "Dispatcher", new { @class = "backFont" })</li>
                <li role="presentation" class="active">@Html.ActionLink("Добавить новость", "PostNews", "Dispatcher", new { @class = "backFont" })</li>
            </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div>
            <h2>Добавить важную информацию</h2>
            @using (Html.BeginForm("PostingNews", "Dispatcher", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.NewValue, new { @class = "col-md-3 control-label" })
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.NewValue, new { @class = "form-control" })
                    </div>
                </div>
                <input type="submit" value="Добавить новость" class="btn btn-primary" />
            }
        </div>
    </div>
</div>



