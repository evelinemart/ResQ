@{
    ViewBag.Title = "Личный кабинет";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="col-md-4">
        <div>
            <ul class="nav nav-pills nav-stacked">
                <li role="presentation" class="active">@Html.ActionLink("Статистика сервиса", "Index", "User")</li>
                <li role="presentation">@Html.ActionLink("Мои вызовы", "MyCalls", "User")</li>
                <li role="presentation">@Html.ActionLink("Мои настройки", "MySettings", "User")</li>
            </ul>
        </div>
    </div>
    <div class="col-md-8">
        <div>
            <h3 class="text-center">
                <span id="fire">101 - Пожарные</span>
                <span id="police">102 - Милиция</span>
                <span>103 - Скорая помощь</span>
            </h3>
        </div>
        <div>
            <p class="information">
                Здравствуй, <span class="text-primary">@ViewBag.LastName </span>  <span class ="text-primary">@ViewBag.FirsName</span>
            </p>
            
            <p class="information">
                Количество отправленых всего запросов: @ViewBag.Count
            </p>
            <p class="information">
                Количество отправленных запросов сегодня: @ViewBag.Today
            </p>
            <div class="embed-responsive embed-responsive-4by3" style="margin-top:30px; position:relative">
                <iframe width="700" height="400" src="//www.youtube.com/embed/LTNgV9InnJg" frameborder="0"></iframe>
            </div>
        </div>
        <div class="user-advertising">
            <a href="http://nure.ua" title="Начать рости">
                <img src="~/Resources/bann-rus.png" />
            </a>
        </div>
    </div>
</div>


